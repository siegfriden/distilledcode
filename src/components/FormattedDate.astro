---
interface Props {
  date: Date;
}

const { date } = Astro.props;

const isoDate = date.toISOString().split("T")[0];
const localeDate = date.toLocaleDateString("en-GB", {
  weekday: "long",
  day: "2-digit",
  month: "long",
  year: "numeric",
});

// Keep the <time> element below on a single line.
// Breaking it into multiple lines will result in unwanted spaces in the HTML output.
// JSX comments also introduce spaces.
---

<time datetime={isoDate}>{localeDate}</time>
